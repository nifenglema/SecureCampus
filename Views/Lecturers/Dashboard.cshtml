@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-1">Lecturer Dashboard</h2>
            <p class="text-muted mb-0">Manage your courses and academic records.</p>
        </div>
        <span class="badge bg-primary">Lecturer</span>
    </div>

    <div class="row g-3">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">My Courses</h5>
                    <p class="card-text text-muted">View courses assigned to you.</p>
                    <a class="btn btn-outline-primary w-100"
                       asp-controller="Lecturers" asp-action="Courses">
                        View My Courses
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Enrolled Students</h5>
                    <p class="card-text text-muted">Check student enrollment by course.</p>
                    <a class="btn btn-outline-primary w-100"
                       asp-controller="Lecturers" asp-action="Students">
                        View Enrolled Students
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Grades</h5>
                    <p class="card-text text-muted">View or update grades for your courses.</p>
                    <a class="btn btn-primary w-100"
                       asp-controller="Lecturers" asp-action="Grades">
                        View / Update Grades
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="alert alert-info mt-4 mb-0">
        <strong>Security Note:</strong> Access is limited to assigned courses only (RBAC + query filtering).
    </div>
</div>
