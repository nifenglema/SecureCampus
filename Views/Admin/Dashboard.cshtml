@model SecureCampusApp.Models.AdminStats
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-1">Admin Dashboard</h2>
            <p class="text-muted mb-0">Manage users, academic data, and review security logs.</p>
        </div>
        <span class="badge bg-danger">Admin</span>
    </div>

    <div class="row g-3">
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted">Total Users</div>
                    <div class="display-6">@Model.TotalUsers</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted">Students</div>
                    <div class="display-6">@Model.TotalStudents</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted">Lecturers</div>
                    <div class="display-6">@Model.TotalLecturers</div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="text-muted">Courses</div>
                    <div class="display-6">@Model.TotalCourses</div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3 mt-2">
        <div class="col-md-3">
            <a class="btn btn-outline-primary w-100" asp-action="Students">Manage Students</a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-outline-primary w-100" asp-action="Lecturers">Manage Lecturers</a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-outline-primary w-100" asp-action="Courses">Manage Courses</a>
        </div>
        <div class="col-md-3">
            <a class="btn btn-outline-dark w-100" asp-action="AuditLogs">View Audit Logs</a>
        </div>
    </div>

    <div class="alert alert-info mt-4 mb-0">
        <strong>Security:</strong> Admin actions are logged in <code>Audit_Logs</code>.
    </div>
</div>
